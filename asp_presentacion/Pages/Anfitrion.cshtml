@page
@model SkyBnB.Pages.Anfitrion.IndexModel
@{
    ViewData["Title"] = "Mis Propiedades - SkyBnB";

    // ✅ Obtenemos la foto del usuario desde sesión (por si no la tiene, usamos una por defecto)
    var fotoUsuario = HttpContext.Session.GetString("FotoUsuario") ?? "/uploads/user_default.jpg";
}

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4">
    <a class="navbar-brand fw-bold" href="/" style="font-size: 1.5rem;">🏠 SkyBnB</a>
    <div class="ms-auto d-flex align-items-center">
        <a href="#" class="me-3 text-dark text-decoration-none">Mensajes</a>
        <a asp-page="/Propiedades" class="me-3 text-dark text-decoration-none">Mis propiedades</a>

        <!-- 🔹 Imagen del usuario logueado -->
        <img src="@fotoUsuario"
             onerror="this.src='/uploads/user_default.jpg';"
             alt="Usuario"
             class="rounded-circle"
             style="width: 40px; height: 40px; object-fit: cover; border: 2px solid #ddd;">
    </div>
</nav>

<!-- FILTRO -->
<div class="container mt-4">
    <div class="p-4 bg-light rounded-3 shadow-sm">
        <form method="get" class="row g-3 align-items-center text-center">
            <div class="col-md-3">
                <input type="text" name="Destino" class="form-control" placeholder="Dónde" />
            </div>
            <div class="col-md-2">
                <input type="date" name="CheckIn" class="form-control" placeholder="Check-In" />
            </div>
            <div class="col-md-2">
                <input type="date" name="CheckOut" class="form-control" placeholder="Check-Out" />
            </div>
            <div class="col-md-2">
                <input type="number" name="Huespedes" class="form-control" placeholder="¿Cuántos?" min="1" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-pink w-100">
                    🔍 Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- LISTADO DE PROPIEDADES -->
<div class="container mt-5">
    <div class="row g-4">
        @if (Model.Propiedades != null && Model.Propiedades.Any())
        {
            foreach (var propiedad in Model.Propiedades)
            {
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm h-100 rounded-3">
                        <img src="@propiedad.Imagen"
                             onerror="this.src='/uploads/sin_imagen.jpg';"
                             class="card-img-top propiedad-img"
                             alt="Imagen propiedad" />

                        <div class="card-body">
                            <h6 class="card-title fw-bold">@propiedad.Nombre</h6>
                            <p class="text-muted mb-1">@propiedad.Direccion</p>
                            <p class="fw-semibold text-danger mb-0">$@propiedad.Precio / noche</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted">
                <p>No tienes propiedades registradas aún.</p>
            </div>
        }
    </div>
</div>

<!-- ESTILOS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fff;
    }

    .btn-pink {
        background-color: #d63384;
        color: white;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #b12d6b;
            color: white;
        }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .propiedad-img {
        height: 180px;
        object-fit: cover;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .pagination .page-item.active .page-link {
        background-color: #d63384;
        border-color: #d63384;
    }
</style>
