@page
@model asp_presentacion.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container mt-5 mb-5">
    <div class="mx-auto" style="max-width: 800px;">
        <h2 class="fw-bold mb-4 text-center" style="color:#2b2b2b;">Registro</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <input asp-for="Usuario.Nombre" class="form-control form-control-lg" placeholder="Nombre" required />
                </div>
                <div class="col-md-6">
                    <input asp-for="Usuario.Apellido" class="form-control form-control-lg" placeholder="Apellido" required />
                </div>

                <div class="col-md-6">
                    <input asp-for="Usuario.Email" type="email" class="form-control form-control-lg" placeholder="Correo electrónico" required />
                </div>
                <div class="col-md-6">
                    <input asp-for="Usuario.Contrasena" type="password" class="form-control form-control-lg" placeholder="Contraseña" required />
                </div>

                <div class="col-md-6">
                    <input asp-for="Usuario.Telefono" class="form-control form-control-lg" placeholder="Teléfono" required />
                </div>
                <div class="col-md-6">
                    <input asp-for="Usuario.Fecha_nacimiento" type="date" class="form-control form-control-lg" placeholder="Fecha de nacimiento" required />
                </div>

                <!-- Foto de perfil -->
                <div class="col-12 mt-4">
                    <label class="form-label fw-semibold">Foto de perfil</label>
                    <div class="upload-area text-center p-4 border rounded-3" style="border:2px dashed #ddd;">
                        <p class="mb-1 fw-semibold">Arrastra tu foto aquí o haz clic para subirla</p>
                        <p class="text-muted small">Usa una foto clara y reciente para tu perfil.</p>
                        <input type="file" asp-for="FotoPerfil" accept="image/*" class="form-control mt-2" style="max-width: 300px; margin: 0 auto;" />
                    </div>
                </div>

                <!-- Campo oculto del rol (1 = Anfitrión, 2 = Huésped) -->
                <input type="hidden" asp-for="Rol" />
            </div>

            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-danger btn-lg w-100 fw-semibold">Continuar</button>
                <p class="mt-3 text-muted small">
                    Al continuar, aceptas nuestros
                    <a href="#" class="text-decoration-none text-dark">Términos de servicio</a>
                    y
                    <a href="#" class="text-decoration-none text-dark">Política de privacidad</a>.
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fff;
    }

    .form-control {
        background-color: #f8f4f4;
        border: none;
        height: 50px;
    }

        .form-control:focus {
            box-shadow: 0 0 0 2px #d00000;
        }

    .btn-danger {
        background-color: #d00000;
        border: none;
    }

        .btn-danger:hover {
            background-color: #b00000;
        }

    .upload-area:hover {
        background-color: #fdf3f3;
        border-color: #ff5a5f;
    }
</style>
