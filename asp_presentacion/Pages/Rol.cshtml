@page
@model asp_presentacion.Pages.RolModel
@{
    ViewData["Title"] = "Seleccionar Rol";
}

<div class="role-wrapper d-flex flex-column justify-content-center align-items-center">
    <h1 class="fw-bold mb-4 role-title">Escoge tu rol</h1>

    <div class="d-flex flex-column gap-3">
        <a href="/Registro?rol=2" class="btn btn-danger btn-xl">Huésped</a>
        <a href="/Registro?rol=1" class="btn btn-danger btn-xl">Anfitrión</a>
    </div>
</div>

<style>
    html, body {
        height: 100%;   
        margin: 0;
        padding: 0;
        background-color: #fff5f5 !important; /* Fondo rosado completo */
        overflow: hidden; /* ❌ Quita la barra de scroll */
        font-family: 'Poppins', sans-serif;
    }

    /* Contenedor centrado: ya no usa 100vh, usa calc restando navbar */
    .role-wrapper {
        height: calc(100vh - 180px); /* Ajusta dependiendo de tu navbar */
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .role-title {
        font-size: 3rem; /* TÍTULO más grande */
        color: #2b2b2b;
    }

    .btn-xl {
        background-color: #d00000;
        border: none;
        padding: 14px 50px; /* Botones más grandes */
        font-size: 1.5rem;
    }

        .btn-xl:hover {
            background-color: #b00000;
        }
</style>

