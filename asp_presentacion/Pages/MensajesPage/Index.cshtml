@page
@model asp_presentacion.Pages.MensajesPage.IndexModel
@{
    ViewData["Title"] = "Mensajes";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">Mensajes</h2>

    @if (Model.Conversaciones == null || !Model.Conversaciones.Any())
    {
        <p class="text-muted">Aún no tienes conversaciones activas.</p>
    }
    else
    {
        <div class="col-lg-8 mx-auto">
            @foreach (var conv in Model.Conversaciones)
            {
                <div class="card mb-3 border-0 shadow-sm conv-card rounded-3 @(conv.NoLeidos > 0 ? "con-nuevo" : "")">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-semibold">@conv.NombreOtroUsuario</div>
                            <div class="text-muted small">@conv.DetallePropiedad</div>
                        </div>

                        <div class="d-flex align-items-center">
                            @* Badge de mensajes nuevos *@
                            @if (conv.NoLeidos > 0)
                            {
                                <span class="badge bg-danger me-2">
                                    @conv.NoLeidos nuevo@(conv.NoLeidos > 1 ? "s" : "")
                                </span>
                            }

                            <a asp-page="/MensajesPage/Chat"
                               asp-route-reservaId="@conv.ReservaId"
                               asp-route-otroUsuarioId="@conv.OtroUsuarioId"
                               class="btn btn-outline-danger btn-sm">
                                Ver chat
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .conv-card {
        transition: all .15s ease-in-out;
    }

        .conv-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.08);
        }

    /* Conversación con mensajes nuevos */
    .con-nuevo {
        background-color: #ffe8ef !important;
        border-left: 4px solid #ea2833 !important;
        box-shadow: 0 0 10px rgba(234, 40, 51, 0.2);
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        // Cuando el backend diga que hay que actualizar la bandeja
        connection.on("ActualizarConversaciones", () => {
            // Lo más simple y seguro: recargar la página
            location.reload();
        });

        connection.start()
            .catch(err => console.error("Error al conectar con SignalR:", err));
    </script>
}
