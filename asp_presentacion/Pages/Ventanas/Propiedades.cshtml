@page
@model asp_presentacion.Pages.Ventanas.PropiedadesModel  //tener en cuanta este nombre aca
@{
    ViewData["Titulo"] = " ";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Planes</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.direccion" />
                <input type="hidden"
                       asp-for="@Model.Actual!.capacidad" />
                <input type="hidden"
                       asp-for="@Model.Actual!.tipo_de_propiedad" />
                <input type="hidden"
                       asp-for="@Model.Actual!.precio" />
                <input type="hidden"
                       asp-for="@Model.Actual!.estanciaminima" />
                <input type="hidden"
                       asp-for="@Model.Actual!.reglas_propiedad" />
                <input type="hidden"
                       asp-for="@Model.Actual!.imagen" />

            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Planes</h3>@*titulo  paginavv*@

                    <div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.nombre" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.direccion" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.capacidad" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.tipo_de_propiedad" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Precio
                            </label>
                            <div class="col-lg-6">
                                <input id="nmTelefono"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.precio" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Detalles
                            </label>
                            <div class="col-lg-6">
                                <input id="nmDirreccion"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.estanciaminima" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.reglas_propiedad" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.usuario" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre  @*aca modifico lo de guardar en cada div*@
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.imagen" /> @*esta linea conecta con la variable del visual*@
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">

                                @Model.Actual!.nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flnombre"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.nombre"
                       placeholder="nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Nombre  

                            </th>
                            <th>
                                Direccion

                            </th>
                            <th>
                                Capacidad

                            </th>
                             <th>
                                Tipo de propieda

                            <th>
                                Precio

                            </th>
                            <th>
                                Estancia minima

                            </th>
                            
                            <th>
                                Reglas de la propiedad
                            </th>

                            <th class="cl_actions">
                                Usuario
                            </th>
                            <th>
                                Imagen

                            </th>
                            <th>
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>

                                    <td>
                                        @elemento.nombre
                                    </td>
                                    <td>
                                        @elemento.direccion
                                    </td>
                                    <td>
                                        @elemento.capacidad
                                    </td>
                                    <td>
                                        @elemento.tipo_de_propiedad
                                    </td>
                                    <td>
                                        @elemento.precio
                                    </td>
                                    <td>
                                        @elemento.estanciaminima
                                    </td>
                                    <td>
                                        @elemento.reglas_propiedad
                                    </td>

                                    <td class="cl_hidden">
                                        @elemento.usuario
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.imagen
                                    </td>

                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>